<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico" />

  <title>Tenantive.ly</title>
  
</head>

<body>
  <main role="main">

    {{> home-jumbotron}}

    <div class="container">
      <div class="row mt-5 justify-content-between">
            <div class="col-md-6">
              <div class="row">
              {{#if filtered}}
                <h2>Showing properties from "{{zipcode}}"</h2>
              {{else}}
                <h2 class="d-flex">All listings</h2>
              {{/if}} 
                  </div>
                  <div class="input-group">
                        <form action="submit" class="d-flex w-100 justify-content-between">
                              
                                          <span class="input-group-text" id="filter-label">Filter by Zipcode:</span>
                                          <input class="form-control" inputmode="numeric" placeholder="Enter zipcode here" id="zipcode">
                                    <button class="btn btn-primary" type="submit" id="submit-zip">Submit</button>
                        </form>
                  </div>
            </div>
        <div class="row row-cols-1 row-cols-md-3 g-4">
          {{#each properties as |property|}}
            {{> property-home property}}
          {{/each}}

        </div>

      </div>
    </div>
    <script src="/js/filter.js"></script>
  {{#if loggedIn}}
    <script src="/js/logout.js"></script>
  {{/if}}