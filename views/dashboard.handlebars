<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/style.css">
  <title>Tenantive.ly</title>
  <style>
    body {
      background-image: url("/images/bg.jpeg");
      background-size: contain;
      background-repeat: no-repeat;
    }
  </style>
</head>

<body>

  <main role="main">

    <div class="row">
      <div class="col">
        <div class="container dash-menu d-flex">

          <a href="./index.html">
            <img class="logo" src="/images/tenantively-icon-white.png" alt="">
          </a>

          <div class="navigation dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton"
              data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              DASHBOARD
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <a class="dropdown-item" href="./">Exit Dashboard</a>
            </div>
          </div>

        </div>
      </div>


    </div>

    <div class="container mt-4">
      <div class="row">
        <div class="col mt-4">
          <h1>Hello there!</h1>
          {{#if properties.length}}
          <ul>
            <li>You have <strong>{{properties.length}} properties</strong>.</li>
          </ul>
          <p>Thank you for being a part of the Tenantive.ly community.</p>

          {{else}}
          <p>You don't have any properties listed.</p>
          <button class="btn btn-primary">Add a Property!</button>
          {{/if}}
        </div>
        <div class="col-md-7 col-s-12 mt-4">
          <div class="dash-card">
            <div class="dash-card-title d-flex justify-content-between align-items-center">
              <h2>Plan Details</h1>
                <a href="">Edit</a>
            </div>
            <div class="dash-card-content">
              <div class="row">
                <div class="col plan-overview">
                  <div>
                    <img class="plan-icon" src="./images/tenantively-icon-dark.png" alt="">
                    <h3 class="text-center">PRO</h3>
                    <p>You are on the <strong>PRO</strong> plan <br> with billing from <strong>rent revenue</strong>.
                    </p>
                  </div>
                </div>
              <div class="col plan-details">
                <table class="table table-sm">
                  <thead>
                    <tr>
                      <th scope="col">Description</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>{{properties.length}} listings $90/month</td>
                      <th>${{cost_per_month properties.length}}.00</th>
                    </tr>
                    <tr>
                      <td>PRO Plan $30/month</td>
                      <th>$30.00</th>
                    </tr>
                  </tbody>
                </table>
                {{!-- <h3 class="text-right">TOTAL: $ 360.00</h3> --}}
              </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col mt-5">
          <div class="dash-card">
            <div class="dash-card-title d-flex justify-content-between align-items-center">
              <h2>My Properties</h1>
                <a href="/add-property">+ New</a>
            </div>
            <div class="dash-card-content">
              <div class="my-properties list-group">
                <!-- List item -->
                {{#if properties.length}}
                {{#each properties as |property|}}
                {{> property-dashboard}}
                {{/each}}
                {{else}}
                <p class="text-align-center">
                  You don't have any listings - yet.
                </p>
                {{/if}}
                <!-- end of list item -->

              </div>
            </div>
          </div>
        </div>

      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"></script>
    <script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery-slim.min.js"><\/script>')</script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.1/js/bootstrap.min.js"
      integrity="sha512-UR25UO94eTnCVwjbXozyeVd6ZqpaAE9naiEUBK/A+QDbfSTQFhPGj5lOR6d8tsgbBk84Ggb5A3EkjsOgPRPcKA=="
      crossorigin="anonymous" referrerpolicy="no-referrer"></script>