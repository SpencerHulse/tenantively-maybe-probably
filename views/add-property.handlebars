<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/style.css">
  <title>Tenantive.ly</title>
  <style>
    body {
      background-image: url("/images/bg.jpeg");
      background-size: contain;
      background-repeat: no-repeat;
    }
  </style>
</head>

<body>

  <main role="main">

    <div class="row">
      <div class="col">
        <div class="container dash-menu d-flex">

          <a href="/">
            <img class="logo" src="/images/tenantively-icon-white.png" alt="">
          </a>

          <div class="navigation dropdown">
            <a href="/dashboard">
              <button class="btn btn-secondary back-to-dashboard" type="button">
                Back to Dashboard
              </button>
            </a>
          </div>

        </div>
      </div>


    </div>

<div class="container">
    <div class="row gx-5">
        <div class="col mt-5">
            <div class="row">
                <h2>Add a property</h2>
                <p>After you have added a property, you may edit it from your Dashboard.</p>
            </div>
            <form action="submit" class="login-form mt-5">
                <div class="row">
                    <div class="col-8">
                        <div class="mb-3">
                            <label for="property-address" class="form-label">Street address</label>
                            <input type="text" class="" id="property-address">
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="mb-3">
                            <label for="property-zipcode" class="form-label">Zip Code</label>
                            <input type="text" class="form-control" id="property-zipcode">
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="property-squarefootage" class="form-label">Square footage</label>
                    <input type="number" class="form-control" id="property-squarefootage">
                </div>
                <div class="mb-3">
                    <label for="property-monthlyrent" class="form-label">Monthly rent</label>
                    <input type="number" class="form-control" id="property-monthlyrent">
                </div>
                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            <label for="property-bedrooms" class="form-label">Bedrooms</label>
                            <select class="form-control" id="property-bedrooms">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label for="property-bathrooms" class="form-label">Bathrooms</label>
                            <select class="form-control" id="property-bathrooms">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="property-availability" class="form-label">Availability</label>
                    <input type="text" class="form-control" id="property-availability">
                </div>
                <div class="mb-3">
                    <label for="property-type" class="form-label">Property Type</label>
                    <input type="text" class="form-control" id="property-type">
                </div>
                <p>Amenities</p>
                <div class="btn-group mb-3" role="group" aria-label="Basic checkbox toggle button group">
                  <input type="checkbox" class="btn-check" id="property-laundry-room" autocomplete="off">
                  <label class="btn btn-outline-primary" for="property-laundry-room">Laundry room</label>

                  <input type="checkbox" class="btn-check" id="property-pets" autocomplete="off">
                  <label class="btn btn-outline-primary" for="property-pets">Pets allowed</label>

                  <input type="checkbox" class="btn-check" id="property-pool" autocomplete="off">
                  <label class="btn btn-outline-primary" for="property-pool">Pool</label>
                </div>
                <div class="mb-3">
                  <label for="property-parking" class="form-label">Describe the parking</label>
                  <input type="text" class="form-control" id="property-parking" value="{{property.amenity.parking}}" />
                </div>
                <div class="mb-3">
                    <label for="property-description" class="form-label">Description</label>
                    <textarea id="property-description" cols="30" rows="10" class="form-control"></textarea>
                </div>

                <button type="submit" class="btn btn-primary" id="submit-new-property">Add property</button>
            </form>
        </div>
    </div>
</div>

<script src="/js/new-property.js"></script>